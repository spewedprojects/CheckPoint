<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:fillViewport="true"
    android:background="@drawable/diagonal_gradient"
    app:layout_constraintVertical_chainStyle="packed">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:animateLayoutChanges="true"
        app:layout_constraintVertical_chainStyle="packed">

            <LinearLayout
                android:id="@+id/best_streak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:paddingVertical="2dp"
                android:orientation="vertical"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintHorizontal_bias="0">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BEST STREAK"
                    android:fontFamily="@font/atkinson_hyperlegible"
                    android:textColor="?attr/colorOnPrimary"/>

                <TextView
                    android:id="@+id/bestStreak_days"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ† 243 days"
                    android:fontFamily="@font/atkinson_hyperlegible"
                    android:textColor="?attr/colorOnPrimary"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/action_items"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingVertical="8dp"
                android:gravity="center"
                android:layout_marginVertical="20dp"
                app:layout_constraintTop_toBottomOf="@id/best_streak"
                app:layout_constraintBottom_toTopOf="@id/history_space"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintVertical_bias="0.35">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="25dp"
                    android:text="EVERY SECOND COUNTS."
                    android:layout_gravity="center"
                    android:fontFamily="@font/atkinson_hyperlegible"
                    android:textColor="?attr/colorOnPrimary"/>
                <TextView
                    android:id="@+id/days_free"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:padding="0dp"
                    android:text="90"
                    android:textSize="150sp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/atkinsonhyperlegiblenext_extralight"
                    android:textFontWeight="10"
                    android:textColor="?attr/titleTextColor"/>
                <TextView
                    android:id="@+id/static_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:text="DAYS FREE"
                    android:layout_gravity="center"
                    android:fontFamily="@font/atkinson_hyperlegible"
                    android:textColor="?attr/colorOnPrimary"/>
                <TextView
                    android:id="@+id/countdown"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20sp"
                    android:text="00:00:00"
                    android:layout_gravity="center"
                    android:fontFamily="@font/atkinson_hyperlegible"
                    android:textColor="?attr/colorOnPrimary"/>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/relapseButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40sp"
                    android:textSize="18sp"
                    android:includeFontPadding="true"
                    android:paddingHorizontal="35dp"
                    android:paddingVertical="15dp"
                    android:text="Relapse"
                    android:textColor="?attr/colorOnTertiary"
                    android:fontFamily="@font/atkinson_hyperlegible"
                    android:layout_gravity="center"
                    app:strokeColor="?attr/strokeColor"
                    app:strokeWidth="1dp"
                    android:backgroundTint="?attr/colorTertiary"
                    app:rippleColor="?attr/rippleColor"
                    android:longClickable="true"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/history_space"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="20dp"
                android:paddingHorizontal="20dp"
                android:paddingVertical="8dp"
                android:layout_gravity="center"
                app:layout_constraintTop_toBottomOf="@id/action_items"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintVertical_bias="0.93"
                android:clickable="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HISTORY"
                    android:layout_gravity="center"
                    android:fontFamily="@font/atkinson_hyperlegible"
                    android:textColor="?attr/colorOnPrimary"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrow_drop_up_24"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"/>

            </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>